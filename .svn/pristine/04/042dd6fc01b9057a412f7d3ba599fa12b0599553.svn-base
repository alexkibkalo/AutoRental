.clearfix:after{
    content: '';
    display: table;
    width: 100%;
    clear: both;
}

div {
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}
.container{
    width: 1400px;
    margin: 0 auto;

}
body {
    background: #556e84;
    min-height: 100%;
    font-family: sans-serif, Arial;
}
.header {
    margin-left: 325px;
    font-size: 30px;
}

.descr{
    width: 600px;
    padding-top: 50px;
    margin-left: 150px;
    margin-right: -100px;
    margin-top: 50px;
}
.cars {
    text-align: right;
    padding-top: 50px;
    font-weight: normal;
    font-size: 14px;
    float:left;
}
.list{
    margin-left: 20px;
    margin-bottom: 30px;
}
h3 {
    text-align: center;
    font-size: 1.65em;
    margin: 0 0 30px;
}
div {
    display: flex;
    flex-wrap: wrap;
}

@media screen and (min-width: 50em) {
    a {
        width: calc(25% - 6px);
        margin-left: 50px;
    }

    a:nth-of-type(2n) {
        margin-right: 8px;
    }

    a:nth-of-type(4n) {
        margin-right: 0;
    }
}

.top-menu{
    padding-top: 50px;
